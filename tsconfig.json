{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./*.js", "src/**/*.ts", "tests/**/*.ts"]
}